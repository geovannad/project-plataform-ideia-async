<div class="row mb-4">
  <div class="col-md-12">
    <h1 class="mb-4">
      <i class="bi bi-person-circle"></i> Meu Perfil
    </h1>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm text-center">
      <div class="card-body p-5">
        <h4>{{user.name}}</h4>
        <p class="text-muted">{{user.email}}</p>
        <a href="/logout" class="btn btn-outline-danger">
          <i class="bi bi-box-arrow-right"></i> Sair
        </a>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
          <i class="bi bi-info-circle"></i> Informações da Conta
        </h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <strong>Nome:</strong>
          <p>{{user.name}}</p>
        </div>
        <div class="mb-3">
          <strong>Email:</strong>
          <p class="text-break">{{user.email}}</p>
        </div>
        {{#if user.cpf}}
          <div class="mb-3">
            <strong>CPF:</strong>
            <p>{{user.cpf}}</p>
          </div>
        {{/if}}
        <hr>
        <p class="text-muted small">
          <i class="bi bi-shield-lock"></i> Sua senha é protegida e criptografada com segurança.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>
        <i class="bi bi-lightbulb"></i> Minhas Ideias
      </h3>
      <a href="/ideas/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Ideia
      </a>
    </div>

    {{#if ideas}}
      <div class="row g-4">
        {{#each ideas}}
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title flex-grow-1">{{this.title}}</h5>
                  <span class="badge bg-primary">
                    <i class="bi bi-hand-thumbs-up"></i> {{this.voteCount}}
                  </span>
                </div>

                {{#if this.Category}}
                  <span class="badge bg-info mb-2">{{this.Category.name}}</span>
                {{/if}}

                <p class="card-text text-muted small">{{truncate this.description 80}}</p>

                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                  <small class="text-muted">
                    <i class="bi bi-calendar"></i> {{formatDate this.created_date}}
                  </small>
                </div>
              </div>
              <div class="card-footer bg-light">
                <div class="d-grid gap-2">
                  <a href="/ideas/{{this.id}}" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> Ver
                  </a>
                  <a href="/ideas/{{this.id}}/edit" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-pencil"></i> Editar
                  </a>
                  <form method="POST" action="/ideas/{{this.id}}/delete">
                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                    <button 
                      type="submit" 
                      class="btn btn-sm btn-outline-danger w-100"
                      onclick="return confirm('Tem certeza que deseja deletar esta ideia?')"
                    >
                      <i class="bi bi-trash"></i> Deletar
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="text-center py-5">
        <div class="mb-4">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
        </div>
        <h5 class="mb-2">Você ainda não criou ideias</h5>
        <p class="text-muted mb-4">Compartilhe sua primeira ideia e inspire o Instituto!</p>
        <a href="/ideas/create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Criar Primeira Ideia
        </a>
      </div>
    {{/if}}
  </div>
</div>
